---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";

const pages = [
  { path: "/", title: "Home" },
  { path: "/blog", title: "Blog" },
];
---

<header>
  <h2 class="my-2">
    {SITE_TITLE}
  </h2>
  <nav class="py-8">
    <ul class="flex gap-8 flex-col max-h-14 overflow-y-scroll snap-y">
      {
        pages.map((page, i) => (
          <li class="snap-center">
            <a
              class="text-5xl p-2 rounded-xl text-rose-500 hover:text-yellow-400"
              href={page.path}
            >
              {i + 1}/{pages.length}: {page.title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
